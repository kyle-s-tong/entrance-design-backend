{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "Title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "Images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "Price": {
      "type": "float"
    },
    "Description": {
      "type": "richtext"
    },
    "ProductCategory": {
      "model": "product-category",
      "via": "Products"
    },
    "Slug": {
      "type": "string",
      "unique": true
    },
    "ShopifyId": {
      "type": "string",
      "private": true
    }
  }
}
